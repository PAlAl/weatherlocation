<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="BaseTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@color/black_700</item>
        <item name="android:textColorPrimary">@color/black_700</item>
        <item name="android:textColorSecondary">@color/black_700</item>

        <item name="dividerColor">@color/grey_500</item>
        <item name="dividerWidth">2dp</item>
        <item name="toastTextColor">@color/white</item>
    </style>

    <style name="AppTheme" parent="BaseTheme" />

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="colorPrimary">@color/primary_dark</item>
    </style>

    <style name="MainToolbar" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:background">@color/primary</item>
        <item name="titleTextColor">@color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="ProgressDialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>
